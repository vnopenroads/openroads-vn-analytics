[Unit]
Description=uWSGI instance to serve cba-api
After=network.target


[Service]
User={{ www_user }} ubuntu
Group=www-data
WorkingDirectory={{ cba_api_dir }}
Environment="PATH={{ cba_api_dir }}/venv/bin"
ExecStart={{ cba_api_dir }}/venv/bin/uwsgi --ini cba-api.ini


[Install]
WantedBy=multi-user.target